{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container py-4">
    <h2 class="mb-4">Détail du produit</h2>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }} €</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('app_admin_gestion_index') }}" class="btn btn-secondary">← Retour à la liste</a>
        <a href="{{ path('app_admin_gestion_edit', {'id': product.id}) }}" class="btn btn-primary">Modifier</a>
        {{ include('admin_gestion/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
