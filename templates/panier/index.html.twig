{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <h2>Mon panier</h2>

    {% if items is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.produit.name }}</td>
                        <td>{{ item.produit.price }} €</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.total }} €</td>
                        <td>
                            <a href="{{ path('panier_retirer', {'id': item.produit.id}) }}" class="btn btn-sm btn-danger">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('panier_valider') }}" class="btn btn-success mt-4">Valider la commande</a>

        <div class="text-end">
            <strong>Total : {{ total }} €</strong>
        </div>

        <div class="text-end mt-3">
            <a href="{{ path('panier_vider') }}" class="btn btn-warning">Vider le panier</a>
        </div>
    {% else %}
        <div class="alert alert-info">
            Votre panier est vide.
        </div>
    {% endif %}
{% endblock %}

